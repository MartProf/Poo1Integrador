<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controlador.DashboardController"
            prefWidth="1200" prefHeight="800">

    <!-- HEADER: Barra de navegación -->
    <top>
        <HBox style="-fx-background-color: #478978; -fx-padding: 10;" spacing="30" alignment="CENTER_LEFT" prefHeight="60.0">
            <Label text="Municipalidad" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>

            <!-- Botones de navegación -->
            <Button text="Eventos Disponibles" fx:id="btnEventosDisponibles" onAction="#handleEventosDisponibles"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;"/>
            <Button text="Gestión de Eventos" fx:id="btnMisEventos" onAction="#handleMisEventos"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;"/>
            <Button text="Nuevo Evento" fx:id="btnNuevoEvento" onAction="#handleNuevoEvento"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;"/>

            <!-- Spacer -->
            <Pane HBox.hgrow="ALWAYS"/>

            <!-- Usuario -->
            <Label fx:id="lblUsuario" text="Usuario" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
            <Button text="Perfil" fx:id="btnPerfil" onAction="#handlePerfil"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;"/>

            <!-- Botón Cerrar Sesión -->
            <Button text="Cerrar Sesión" fx:id="btnCerrarSesion" onAction="#handleCerrarSesion"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;"/>
        </HBox>
    </top>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #ffffff;"/>
    </center>

</BorderPane>
