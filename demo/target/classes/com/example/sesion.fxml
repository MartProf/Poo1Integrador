<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.controlador.SesionController"
            style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #3498db);"
            prefWidth="900" prefHeight="600">

    <center>
        <HBox alignment="CENTER" spacing="0">
            <!-- PANEL IZQUIERDO - Información Municipal -->
            <VBox alignment="CENTER" spacing="30" style="-fx-padding: 60;" prefWidth="450">
                <!-- Logo/Icono Municipal -->
                <VBox alignment="CENTER" spacing="15">
                    <Label text="🏛️" style="-fx-font-size: 80px;"/>
                    <Label text="Sistema Municipal" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    <Label text="Gestión de Eventos" style="-fx-font-size: 20px; -fx-text-fill: #ecf0f1;"/>
                </VBox>
                
                <!-- Información adicional -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="🎯 Organiza eventos municipales" style="-fx-font-size: 14px; -fx-text-fill: #bdc3c7;"/>
                    <Label text="👥 Gestiona participantes" style="-fx-font-size: 14px; -fx-text-fill: #bdc3c7;"/>
                    <Label text="📊 Controla inscripciones" style="-fx-font-size: 14px; -fx-text-fill: #bdc3c7;"/>
                </VBox>
            </VBox>
            
            <!-- PANEL DERECHO - Formulario de Login -->
            <VBox alignment="CENTER" spacing="0" prefWidth="450">
                <!-- Tarjeta de Login -->
                <VBox alignment="CENTER" spacing="25" 
                      style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 5);"
                      maxWidth="350" minWidth="350">
                    
                    <!-- Título -->
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="👨‍💼" style="-fx-font-size: 48px;"/>
                        <Label text="Iniciar Sesión" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label text="Acceso para empleados municipales" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>
                    
                    <!-- Formulario -->
                    <VBox spacing="18" style="-fx-padding: 10 0;">
                        <!-- Campo Usuario -->
                        <VBox spacing="8">
                            <Label text="Usuario" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                            <TextField fx:id="txtUsu" promptText="Ingrese su usuario" 
                                     style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-border-width: 1;"
                                     prefHeight="45"/>
                        </VBox>
                        
                        <!-- Campo Contraseña -->
                        <VBox spacing="8">
                            <Label text="Contraseña" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                            <PasswordField fx:id="TxtCon" promptText="Ingrese su contraseña"
                                         style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-border-width: 1;"
                                         prefHeight="45"/>
                        </VBox>
                        
                        <!-- Botón Iniciar Sesión -->
                        <Button fx:id="BtnIniciarSesion" text="🔐 INICIAR SESIÓN" 
                                onAction="#handleIniciarSesion"
                                style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: #3498db; -fx-background-radius: 8; -fx-padding: 15; -fx-cursor: hand;"
                                prefHeight="50" maxWidth="Infinity"/>
                    </VBox>
                    
                    <!-- Separador -->
                    <Separator style="-fx-background-color: #ecf0f1;" prefWidth="280"/>
                    
                    <!-- Enlace Registro -->
                    <HBox alignment="CENTER" spacing="8">
                        <Label text="¿No tienes cuenta?" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                        <Button fx:id="BtnRegistrarse" text="Registrarse" 
                                onAction="#handleRegistrarse"
                                style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-font-size: 14px; -fx-font-weight: bold; -fx-underline: true; -fx-cursor: hand;"
                                prefHeight="25"/>
                    </HBox>
                </VBox>
            </VBox>
        </HBox>
    </center>
    
    <!-- FOOTER -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 20; -fx-background-color: rgba(0,0,0,0.2);">
            <Label text="© 2025 Municipalidad - Sistema de Gestión de Eventos" 
                   style="-fx-font-size: 12px; -fx-text-fill: #ecf0f1;"/>
        </HBox>
    </bottom>

</BorderPane>
