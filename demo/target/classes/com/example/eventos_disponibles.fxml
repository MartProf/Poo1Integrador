<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controlador.EventosDisponiblesController"
      spacing="10" style="-fx-padding: 20;">
    
    <Label text="Eventos Disponibles para Inscripción"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TableView fx:id="tablaEventosDisponibles" prefHeight="600">
        <columns>
            <TableColumn fx:id="colNombre" text="Nombre"/>
            <TableColumn fx:id="colFecha" text="Fecha Inicio"/>
            <TableColumn fx:id="colDuracion" text="Duración (días)"/>
            <TableColumn fx:id="colTipo" text="Tipo"/>
            <TableColumn fx:id="colEstado" text="Estado"/>
            <TableColumn fx:id="colCupo" text="Cupo Disponible"/>
            <TableColumn fx:id="colAcciones" text="Acciones"/>
        </columns>
    </TableView>
</VBox>
