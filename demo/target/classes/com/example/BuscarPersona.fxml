<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.controlador.BuscarPersonaController"
            prefWidth="600" prefHeight="500"
            minWidth="500" minHeight="400"
            style="-fx-background-color: #f8f9fa;">

    <!-- HEADER -->
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="🔍 Buscar Persona" 
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label fx:id="lblSubtitulo" text="Buscar por DNI, nombre o apellido"
                   style="-fx-font-size: 13px; -fx-text-fill: #bdc3c7; -fx-padding: 3 0 0 0;"/>
        </VBox>
    </top>

    <!-- CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" 
                    style="-fx-background: #f8f9fa; -fx-background-color: #f8f9fa;">
            <VBox style="-fx-padding: 20; -fx-spacing: 15;">
            
            <!-- PANEL DE BÚSQUEDA -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-spacing: 12; -fx-effect: dropshadow(gaussian, rgba(71,137,120,0.3), 10, 0, 0, 2);">
                <Label text="🔍 Criterios de Búsqueda" 
                       style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #478978;"/>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="txtFiltro" 
                               promptText="Ej: 12345678 o Juan Pérez"
                               prefWidth="350"
                               style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
                    
                    <Button fx:id="btnBuscar" text="🔍 Buscar"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 5;"/>
                    
                    <Button fx:id="btnLimpiar" text="🗑️ Limpiar"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 5;"/>
                </HBox>
                
                <Label fx:id="lblResultadosInfo" text="Ingrese un criterio de búsqueda para comenzar"
                       style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
            </VBox>

            <!-- PANEL DE RESULTADOS -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-spacing: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="📋 Resultados de Búsqueda" 
                           style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblContadorResultados" text="0 personas encontradas"
                           style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d; -fx-background-color: #ecf0f1; -fx-padding: 4 8; -fx-background-radius: 12;"/>
                </HBox>
                
                <ListView fx:id="listResultados" 
                          prefHeight="180"
                          minHeight="120"
                          maxHeight="250"
                          style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-color: #ffffff;"/>
            </VBox>

            <!-- PANEL DE ACCIONES -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-spacing: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="❓ ¿No encontraste la persona que buscas?" 
                       style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                
                <HBox spacing="12" alignment="CENTER">
                    <Button fx:id="btnRegistrarNueva" 
                            text="➕ Registrar Nueva Persona"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5; -fx-font-size: 12px;"
                            HBox.hgrow="ALWAYS"/>
                    
                    <Region style="-fx-min-width: 15;"/>
                    
                    <Button fx:id="btnSeleccionar" 
                            text="✅ Seleccionar Persona"
                            style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5; -fx-font-size: 12px;"
                            HBox.hgrow="ALWAYS"/>
                    
                    <Button fx:id="btnCancelar" 
                            text="❌ Cancelar"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5; -fx-font-size: 12px;"
                            HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>
        </VBox>
        </ScrollPane>
    </center>

</BorderPane>
