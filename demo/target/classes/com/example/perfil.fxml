<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.controlador.PerfilController">
    
    <center>
        <VBox spacing="20" style="-fx-padding: 10;">
            <Label text="Perfil de Usuario" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Datos personales -->
            <GridPane hgap="10" vgap="10">
                <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nombreField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Apellido:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="apellidoField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="DNI:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="dniField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Teléfono:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="telefonoField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <Button fx:id="guardarButton" text="Guardar cambios" onAction="#guardarDatos"/>

            <!-- Inscripciones -->
            <Label text="Eventos en los que estás inscripto:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <TableView fx:id="tablaInscripciones" prefHeight="200">
                <columns>
                    <TableColumn fx:id="colNombreEvento" text="Evento"/>
                    <TableColumn fx:id="colFechaInicio" text="Fecha de Inicio"/>
                    <TableColumn fx:id="colTipo" text="Tipo"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
